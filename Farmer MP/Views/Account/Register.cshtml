@model Farmer_MP.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Keep your existing head content -->
    <meta charset="utf-8" />
    <title>Register - AgroMarket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f9f9f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .register-container {
            min-height: 100vh;
        }

        .left-section {
            padding: 60px;
            background-color: #ffffff;
        }

        .brand {
            color: #4CAF50;
            font-weight: 700;
            font-size: 24px;
        }

        .headline {
            color: #4CAF50;
            font-weight: 600;
            font-size: 20px;
        }

        .form-control {
            border-radius: 6px;
            height: 45px;
        }

        .btn-primary {
            background-color: #4CAF50;
            border: none;
        }

        .btn-outline-primary {
            border-color: #4CAF50;
            color: #4CAF50;
        }

            .btn-outline-primary:hover {
                background-color: #4CAF50;
                color: white;
            }

        .right-section {
            background-color: #f0fdf4;
            padding: 60px 40px;
            text-align: center;
        }

            .right-section img {
                max-height: 300px;
                margin-bottom: 20px;
            }

            .right-section h3 {
                color: #4CAF50;
                font-weight: bold;
            }

            .right-section p {
                color: #555;
                font-size: 16px;
                line-height: 1.6;
                max-width: 400px;
                margin: 0 auto;
            }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: white;
            border: 1px solid #ddd;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .nav-item:hover .dropdown-menu {
            display: block;
        }

        .validation-summary-errors ul {
            padding-left: 0;
            list-style: none;
        }
    </style>
</head>
<partial name="_Navbar" />
<body>
    <div class="container-fluid register-container d-flex">
        <div class="col-md-6 d-flex flex-column justify-content-center left-section">
            <div>
                <div class="brand mb-3">AgroMarket</div>
                <div class="headline mb-2">Create Your Account</div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }

                <form asp-action="Register" method="post" id="registerForm">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <!-- Name Field -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Full Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Phone Field -->
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <!-- Address Field -->
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- User Type Field -->
                    <div class="mb-3">
                        <label class="form-label">Account Type</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="UserType" value="Farmer" id="farmer" checked>
                            <label class="form-check-label" for="farmer">Farmer</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="UserType" value="Buyer" id="buyer">
                            <label class="form-check-label" for="buyer">Buyer</label>
                        </div>
                        <span asp-validation-for="UserType" class="text-danger small"></span>
                    </div>

                    <!-- Password Fields -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Terms Checkbox -->
                    <div class="mb-3 form-check">
                        <input asp-for="AcceptTerms" class="form-check-input" />
                        <label asp-for="AcceptTerms" class="form-check-label">
                            I accept the <a href="#">Terms and Conditions</a>
                        </label>
                        <span asp-validation-for="AcceptTerms" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </form>

                <div class="mt-3 text-center">
                    <p>Already have an account? <a asp-action="Login">Sign in</a></p>
                </div>
            </div>
        </div>

        <!-- Right section remains the same -->
        <div class="col-md-6 d-none d-md-flex flex-column justify-content-center align-items-center right-section">
            <img src="https://cdn-icons-png.flaticon.com/512/4090/4090557.png" alt="Farmer Illustration" />
            <h3>Why Join AgroMarket?</h3>
            <p>
                Whether you're a farmer looking to sell your harvest, or a buyer sourcing fresh produce,
                AgroMarket connects you directly and securely. Grow your reach and simplify your business today.
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Phone number formatting
        document.getElementById('Phone').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 3 && value.length <= 6) {
                value = value.replace(/(\d{3})(\d{1,3})/, '$1 $2');
            } else if (value.length > 6) {
                value = value.replace(/(\d{3})(\d{3})(\d{1,4})/, '$1 $2 $3');
            }
            e.target.value = value;
        });

        // Form submission handling
        document.getElementById('registerForm').addEventListener('submit', function () {
            // Remove spaces from phone number before submission
            const phoneInput = document.getElementById('Phone');
            phoneInput.value = phoneInput.value.replace(/\s/g, '');
        });
    </script>
</body>
</html>