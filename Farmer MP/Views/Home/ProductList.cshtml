        transform: scale(1.05);
    }
    
    .card-body {
        padding: 1.25rem;
    }
    
    .card-title {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        color: #333;
    }
    
    .card-text {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .product-price {
        font-weight: 700;
        color: #2E8B57;
        font-size: 1.2rem;
    }
    
    .product-meta {
        font-size: 0.85rem;
        color: #777;
        margin-bottom: 0.5rem;
    }
    
    .product-meta i {
        margin-right: 5px;
        color: #4CAF50;
    }
    
    .card-footer {
        background: white;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1rem;
    }
    
    .btn-success {
        background-color: #4CAF50;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }
    
    .btn-success:hover {
        background-color: #388E3C;
        transform: translateY(-2px);
    }
    
    .btn-primary {
        background-color: #2196F3;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
        margin: 0.5rem 0;
    }
    
    .btn-primary:hover {
        background-color: #1976D2;
        transform: translateY(-2px);
    }
    
    .add-to-favorite {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.8);
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 50%;
