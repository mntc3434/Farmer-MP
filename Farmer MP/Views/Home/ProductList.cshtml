    .add-to-favorite:hover {
        background: white;
        color: #f44336;
        transform: scale(1.1);
    }
    
    .add-to-favorite i {
        font-size: 1rem;
    }
    
    .product-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: #FF9800;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        z-index: 2;
    }
    
    .nearby-farmers-btn {
        background: linear-gradient(135deg, #FF9800, #F57C00);
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: 500;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
    }
    
    .nearby-farmers-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(245, 124, 0, 0.3);
