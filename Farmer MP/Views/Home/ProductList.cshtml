        border-color: #4CAF50;
        box-shadow: 0 0 0 0.2rem rgba(76, 175, 80, 0.25);
    }
    
    #categoryFilter {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 0.5rem 0.75rem;
    }
    
    #filterButton {
        background-color: #4CAF50;
        border: none;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }
    
    #filterButton:hover {
        background-color: #388E3C;
        transform: translateY(-2px);
