@{
    ViewData["Title"] = "Contact Us - Farmer MarketPlace";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: white;
            border: 1px solid #ddd;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .nav-item:hover .dropdown-menu {
            display: block;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <partial name="_Navbar" />

    <!-- Contact Us Hero Section -->
    <section class="hero text-center text-white py-5" style="background: url('/images/contactus2.jpg') no-repeat center center; background-size: cover;">
        <div style="background-color: transparent; padding: 2rem; position: relative; top: -20px;">
            <h1 class="display-4 fw-bold" style="color: #2F4F2F;">Contact Us</h1>
            <p class="lead" style="color: #4B3621;">
                We’re here to help! Reach out to us with any questions or concerns.
            </p>
        </div>

    </section>

    <!-- Contact Information Section -->
    <section class="container my-5">
        <div class="row text-center">
            <div class="col-md-4">
                <i class="bi bi-telephone-fill text-success display-4"></i>
                <h5 class="mt-3">Phone</h5>
                <p>+123 456 7890</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-envelope-fill text-success display-4"></i>
                <h5 class="mt-3">Email</h5>
                <p>support@farmersmarket.com</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-geo-alt-fill text-success display-4"></i>
                <h5 class="mt-3">Address</h5>
                <p>123 Farm Lane, Greenfield, USA</p>
            </div>
        </div>
    </section>

    <!-- Contact Form -->
    <section class="container my-5">
        <h2 class="text-center text-dark">Send Us a Message</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" action="@Url.Action("SendMessage", "Contact")">
                    <div class="mb-3">
                        <label for="name" class="form-label">Your Name</label>
                        <input type="text" class="form-control" id="name" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Your Email</label>
                        <input type="email" class="form-control" id="email" name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" name="Subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Message</label>
                        <textarea class="form-control" id="message" name="Message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Send Message</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Google Map (Optional) -->
    <section class="container my-5 text-center">
        <h2 class="text-dark">Find Us on the Map</h2>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10084.027711223107!2d42.033058987997556!3d9.419751989237561!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1631a5a8e441e64d%3A0xdafe11071687f9d!2sHaramaya%20University!5e0!3m2!1sen!2set!4v1743802256946!5m2!1sen!2set" 
        width="100%" 
        height="400" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade">
       </iframe>

    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 text-center">
        <p>&copy; 2025 Farmer MarketPlace | All Rights Reserved</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
